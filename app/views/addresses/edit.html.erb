<h1>Editing address</h1>

<% form_for(@address) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :card_id %><br />
    <%= f.text_field :card_id %>
  </p>
  <p>
    <%= f.label :first_name %><br />
    <%= f.text_area :first_name %>
  </p>
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_area :last_name %>
  </p>
  <p>
    <%= f.label :address1 %><br />
    <%= f.text_area :address1 %>
  </p>
  <p>
    <%= f.label :address2 %><br />
    <%= f.text_area :address2 %>
  </p>
  <p>
    <%= f.label :address3 %><br />
    <%= f.text_area :address3 %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_area :city %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.text_area :state %>
  </p>
  <p>
    <%= f.label :zip %><br />
    <%= f.text_area :zip %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.text_area :country %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

